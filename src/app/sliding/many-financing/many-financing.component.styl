.many-financing-component
  background-image: url('../../../assets/images/Allura_Home.png');
  background-repeat: no-repeat;
  height: calc(100vh - 100px);
  background-size: cover

.title
  color: #FFFFFF;
  font-family: Lato;
  font-size: 45px;
  font-weight: 700;
  line-height: 54px;
  width: 540px;
  text-align: left;
  position: absolute;
  top: 8%;
  left: 53px;

ul
  position: absolute;
  top: 48%;
  left: 53px;

 li
  color: #FFFFFF;
  font-family: Lato;
  font-size: 28px;
  font-weight: 700;
  line-height: 50px;
  width: 490px;
  text-align: left;

@media only screen and (max-width: 768px)
  .title
    width: unset!important;
  li
    width: unset!important;
@media only screen and (max-width: 425px)
  .title
    font-size: 33px!important;
  li
    font-size: 25px!important;
    line-height: 41px!important;

@media only screen and (max-width: 375px)
  .title
    font-size: 27px!important;
    left: 35px!important;
  li
    font-size: 22px!important;
    line-height: 39px!important;
  ul
    left: 35px!important;
@media only screen and (max-width: 320px)
  .title
    font-size: 22px!important;
  li
    font-size: 21px!important;
    line-height: 39px!important;
  ul
    left: 11px!important;