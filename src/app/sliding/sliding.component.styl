.silding-component
  height: 100vh;
  overflow hidden
  .header
    background-color: #8D8262;
    border: 1px solid #979797;
    width: 100vw;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: fixed;
    top: 0;
    z-index: 2;
    
  .logo
    cursor: pointer;
  
  .btn-group
    margin-right: 4.1%

    button
      background-color: #ececec;
      border-color: #ececec;
      width: 85px;
      box-shadow: 0px 3px 1px -2px rgba(0,0,0,0.2), 0px 2px 2px 0px rgba(0,0,0,0.14), 0px 1px 5px 0px rgba(0,0,0,0.12);
    
    button:focus
      outline: none;
      
      i
        color: #7d7d7d;
        
    button:nth-child(2)
      margin-left: 20px;

  .siding-body
    mat-tab-group
      mat-tab-header
        display: none;

@media only screen and (max-width: 425px)
  .header
    height: 60px!important;
    button
      width: 50px!important;
  .logo
    img
      width: 166px;
  .siding-body
    top: 60px!important;

@media only screen and (max-width: 1024px)
 .silding-component
   overflow: unset;