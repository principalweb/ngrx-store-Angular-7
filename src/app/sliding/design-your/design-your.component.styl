.design-your-component
  background-image: url('../../../assets/images/Allura_Home.png');
  background-repeat: no-repeat;
  height: calc(100vh - 100px);
  background-size: cover

.title
  color: #FFFFFF;
  font-family: Lato;
  font-size: 45px;
  font-weight: 700;
  line-height: 54px;
  width: 540px;
  text-align: left;
  position: absolute;
  top: 43%;
  left: 38px;

.description
  color: #FFFFFF;
  font-family: Lato;
  font-size: 26px;
  font-weight: 600;
  line-height: 42px;
  width: 410px;
  text-align: left;
  position: absolute;
  top: 60%;
  left: 38px;

.visualizer-btn
  background-color: #FFFFFF;
  color: #51594A;
  font-family: Helvetica;
  font-size: 16px;
  font-weight: 700;
  letter-spacing: 0.7px;
  line-height: 19px;
  width: 230px;
  text-align: center;
  padding: 20px;
  width: 260px;
  position: absolute;
  text-align: 621px;
  top: 77%;
  left: 38px;
  box-shadow: 0px 3px 1px -2px rgba(0,0,0,0.2), 0px 2px 2px 0px rgba(0,0,0,0.14), 0px 1px 5px 0px rgba(0,0,0,0.12);

button:focus
  outline: none;

.require-connect
  color: white;
  position: absolute;
  text-align: 621px;
  top: 86%;
  left: 38px;
  text-align: left;
  margin-top: 10px;

@media only screen and (max-width: 425px) 
  .title
    width: unset!important;
    font-size: 35px;
  .description
    width: unset!important;
    font-size: 20px!important;
@media only screen and (max-width: 375px)
  .title
    font-size: 30px;
    line-height: 44px!important;
  .visualizer-btn
    width: 215px;
    font-size: 15px
@media only screen and (max-width: 320px)
  .title
    font-size: 26px;